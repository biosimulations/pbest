{
    # Description of environment
    inputs: {
        models: {
            'model1': {
                location: "path/to/my/model.xml"
                language: "urn:sedml:language:sbml"
            },
        },
    }

    # All the analyses and calculations.  Processes, essentially.
    tasks: {
        "steady_state": {
            _type: steadyState
            additionalInputs: ["p1_init"]
            model: {
                source: "model1"
                changes: {
                    setValue: {
                        modelValue: "p1"
                        newValue: "additionalInputs:p1_init"
                    }
                }
            }
            outputSelections: ["S1", "S2", "S3", "S4"]
        },
        "parameter_scan": {
            _type: repeatedTask
            repeats: {
                "repeat1": {
                    start: 0
                    end: 50
                    nsteps: 100
                }
            }
            subtasks: {
                {
                    task: "tasks:steady_state"
                    "p1_init": "repeat1"
                }
            }
        },
    },

    # Outputs at the end
    reports: {
        "paramScan": {
            outputs: "tasks:parameter_scan"
            filename: "parameter_scan.csv"
            file_format: CSV
        },
    }
    plots: {
        "Fig1": {
            label: "Figure 1"
            xAxis: {
                label: "p1"
            },
            yAxis: {
                label: "Concentrations"
            }
            curves: {
                {
                    x: "tasks:parameter_scan:repeat1"
                    y: "tasks:parameter_scan:S1"
                }
                {
                    x: "tasks:parameter_scan:repeat1"
                    y: "tasks:parameter_scan:S2"
                }
                {
                    x: "tasks:parameter_scan:repeat1"
                    y: "tasks:parameter_scan:S3"
                }
                {
                    x: "tasks:parameter_scan:repeat1"
                    y: "tasks:parameter_scan:S4"
                }
            },
        }
    }
}
